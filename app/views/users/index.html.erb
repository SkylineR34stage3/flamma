<p style="color: green"><%= notice %></p>

<h2>Our users</h2>

<div class="row justify-content-start" id="users">
  <% @users.each do |user| %>
    <div class="col-sm-4 my-2">
      <div class="card" style="max-width: 18rem">
        <img src="/assets/bob.png" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= (user.try(:name).to_s + user.try(:lastname).to_s).empty? ? user.email.sub(/@gmail\.com$/, "") : user.try(:name).to_s + user.try(:lastname).to_s %>
          </h5>
          <p class="card-text">
            <% if user.role %>
              Role: <%= user.role.role %>
            <% else %>
              Role: User
            <% end %>
          </p>
          <%= link_to "Show this user", user, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= will_paginate @users %>

<style>
    .pagination a, .pagination em, .pagination span.current, .pagination span.gap, .pagination span {
        float: left;
        padding: 0 14px;
        line-height: 38px;
        text-decoration: none;
        background-color: white;
        border: 1px solid #DDD;
        border-left-width: 0;
    }

    .pagination {
        border-left: 1px solid #ddd;
    }
    .first{
        padding : 0;
        float: none;
        border: none;
    }

    .previous_page {
        padding : 0;
        float: none;
        border: none;
    }

    .page{
        padding : 0;
        float: none;
        border: none;
    }
    .next{
        padding : 0;
        float: none;
        border: none;
    }

    .last{
        padding : 0;
        float: none;
        border: none;
    }

</style>