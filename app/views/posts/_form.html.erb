<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :subtitle, class: "form-label" %>
    <%= form.text_field :subtitle, class: "form-control"  %>
  </div>

  <div class="mb-3">
    <%= form.label :bich_text, class: "form-label" %>
    <%= form.text_area :bich_text, class: "form-control" %>
  </div>

  <div class="d-none">
    <%= form.label :user_id, class: "form-label" %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="mb-3">
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, options_for_select(Category.all.map { |c| [c.category, c.id] }), {}, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
